@using io_book_project.ViewModels;
@model LoginViewModel

@{
    ViewData["Title"] = "Logowanie";
}
<div class="vh-100">
    <div class="container py-5 h-100">
        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Błąd!</b> - @TempData["Error"]</span>
            </div>
        }
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-outline mb-4">                       
                        <input asp-for="EmailAddress" class="form-control form-control-lg">
                        <label asp-for="EmailAddress" class="form-label"></label>
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-outline mb-4">
                        <input asp-for="Password" class="form-control form-control-lg" />
                        <label asp-for="Password" class="form-label"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <center><button type="submit" class="btn btn-primary btn-lg btn-block">ZALOGUJ SIĘ</button></center>
                    <div class="mb-3">
                        <a class="btn btn-color-two w-100" asp-action="Register" asp-controller="Authorization">Nie masz konta? Zarejestruj się za darmo!</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>