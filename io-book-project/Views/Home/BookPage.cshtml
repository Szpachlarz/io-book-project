@using io_book_project.ViewModels
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@model BookPageViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Books Page";
}

<div class="album py-5">
    <div class="container">

        <div class="row">
            <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                    <img class="card-img-top" src="@Model.CoverImagePath" />
                </div>
            </div>
            <div class="col-md-8 text-left ps-5">
                <h2>@Model.Title ★★★★☆
                    @*@if ((await AuthorizationService.AuthorizeAsync(User, "PolicyName")).Succeeded)
                    {
                        <form asp-controller="User" asp-action="AddToFavourites" asp-route-id="@Model.Id" style="display: inline;">
                            <button type="submit" class="btn btn-primary" style="background-color: blue; border: none;">
                            <i class="bi bi-suit-heart"></i>
                        </button>
                        </form>
                    }*@

                </h2>
 
                <h5>
                    @foreach (var author in Model.Authors)
                    {
                        <a href="#"><p>@author.Names @author.Surname</p></a>
                    }
                </h5>
                @if (@Model.Series != null && Model.Series!="")
                {
                    <p>Cykl: @Model.Series</p>
                }
                <p>
                    @foreach (var category in Model.Categories)
                    {
                        <p>@category.Name</p>
                    }
                </p>
                <br/>
                <h5>Dane szczegółowe:</h5>
                <p>Wydawnictwo: <a href="#">@Model.Publisher</a></p>
                <p>Język: @Model.Language</p> 
                @if (@Model.OriginalLanguage != null && Model.OriginalLanguage != "")
                {
                    <p>Język oryginału: @Model.OriginalLanguage</p>
                }
                @if (@Model.Translation != null && Model.Translation != "")
                {
                    <p>Język oryginału: @Model.Translation</p>
                }
                <p>Liczba stron: @Model.PageCount</p>
                <p>Rok wydania: @Model.PublicationYear.ToString("yyyy")</p>

                <p>Rok pierwszego wydania: @Model.FirstPublicationYear</p>
               
                <p>ISBN: @Model.ISBN</p>

            </div>

        </div>

        <div class="row">
            <div class="col-md-12">
                <p>@Model.Description</p>
            </div>
        </div>

    </div>
</div>

@foreach (var review in Model.Reviews)
{
    <p>@review.UserId</p>
    <p>@review.Text</p>
}


<p>Recenzje</p>
