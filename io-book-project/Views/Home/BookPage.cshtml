    <tr>
        <th>Kolumna 1</th>
        <th>Kolumna 2</th>
    </tr>
    <tr>
        <td>Nazwa użytkownika</td>
        <td>Treść recenzji</td>
    </tr>
    <tr>
        <td>Nazwa użytkownika</td>
        <td>Treść recenzji</td>
    </tr>
</table>