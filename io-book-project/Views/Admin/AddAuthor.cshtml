@using io_book_project.ViewModels;
@model AddAuthorViewModel

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Panel administratora";
}

<h1 class="text-muted px-2">Dodaj autora</h1>
<hr class="divider mt-0">

<form method="post" autocomplete="off" asp-controller="Admin" asp-action="AddAuthor">
<div class="row m-2">
    <div class="col-12 ">
        <div class="row m-2">
            <div class="col-12">
                <div class="forms-inputs">
                    <div class="form-floating">
                        <input type="text" asp-for="Names" class="form-control" id="Name" autocomplete="off" placeholder="a">
                        <label for="Name">Imię</label>
                    </div>
                    <span class="mx-2 mt-1 errorTextColor"></span>
                </div>
            </div>
        </div>
        <div class="row m-2">
            <div class="col-12">
                <div class="forms-inputs">
                    <div class="form-floating">
                        <input type="text" asp-for="Surname" class="form-control" id="Surname" autocomplete="off" placeholder="a">
                        <label for="Surname">Nazwisko</label>
                    </div>
                    <span class="mx-2 mt-1 errorTextColor"></span>
                </div>
            </div>
        </div>
        <div class="row m-2">
            <div class="col-12">
                <div class="forms-inputs">
                    <div class="form-floating">
                        <input type="text" asp-for="Nationality" class="form-control" id="CountryOfOrigin" autocomplete="off" placeholder="a">
                        <label for="CountryOfOrigin">Kraj pochodzenia</label>
                    </div>
                    <span class="mx-2 mt-1 errorTextColor"></span>
                </div>
            </div>
        </div>
        <div class="row m-2">
            <div class="col-12">
                <div class="forms-inputs">
                    <div class="form-floating">
                        <input type="text" asp-for="DateOfBirth" class="form-control" id="DateOfBirth" autocomplete="off" placeholder="a">
                        <label for="DateOfBirth">Data urodzenia</label>
                    </div>
                    <span class="mx-2 mt-1 errorTextColor"></span>
                </div>
            </div>
        </div>
        <div class="row m-2">
            <div class="col-12">
                <div class="forms-inputs">
                    <div class="form-floating ">
                        <input type="text" asp-for="DateOfDeath" class="form-control" autocomplete="off" placeholder="a">
                        <label for="DateOfDeath">Data śmierci</label>
                    </div>
                    <span class="mx-2 mt-1 errorTextColor"></span>
                </div>
            </div>
        </div>      
        <div class="row m-2">
            <div class="float-end">
                <button type="submit" class="btn btn-primary btn-lg float-end" name="senduser">Dodaj</button>
            </div>
        </div>
    </div>
</div>
</form>